<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBottom"
        android:text="國立台中科技大學"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <com.example.parking.view.NoScrollViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorBottom"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:textAlignment="center">

        <RadioButton
            android:id="@+id/rb_school"
            style="@style/BottomTabStyle"
            android:checked="true"
            android:drawableBottom="@mipmap/school" />

        <RadioButton
            android:id="@+id/rb_record"
            style="@style/BottomTabStyle"
            android:drawableBottom="@mipmap/record" />

        <RadioButton
            android:id="@+id/rb_parking"
            style="@style/BottomTabStyle"
            android:drawableBottom="@mipmap/parking" />

        <RadioButton
            android:id="@+id/rb_clock"
            style="@style/BottomTabStyle"
            android:drawableBottom="@mipmap/alarmclock" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/BottomTabStyle"
            android:drawableBottom="@mipmap/setup" />
    </RadioGroup>

</LinearLayout>